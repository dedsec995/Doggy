<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.04"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Back"
            android:fontFamily="@font/heebo_light"
            android:textSize="12sp"
            android:layout_margin="16dp"
            android:textColor="@color/colorAccentLighter"
            android:background="@drawable/button_shape_dark"
            android:id="@+id/profile_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/cookie"
            android:gravity="center"
            android:layout_weight="0.5"
            android:padding="4dp"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="42sp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Snap"
            android:fontFamily="@font/heebo_light"
            android:textSize="12sp"
            android:layout_margin="16dp"
            android:textColor="@color/colorAccentLighter"
            android:background="@drawable/button_shape_dark"
            android:id="@+id/profile_snap"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
        android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profileInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="Your Progress Ratio so far: "
            android:layout_weight="1"
            android:fontFamily="@font/heebo_light"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="Total Snaps : 0"
            android:layout_weight="1"
            android:id="@+id/snapsTotal"
            android:fontFamily="@font/heebo_light"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorSelected"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="Total Dogs: 120"
            android:layout_weight="1"
            android:id="@+id/dogsTotal"
            android:fontFamily="@font/heebo_light"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorSelected"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <com.airbnb.lottie.LottieAnimationView
                app:lottie_rawRes="@raw/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

<!--            <ImageView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:src="@drawable/dog"/>-->

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.05"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Unlocked"
            android:fontFamily="@font/heebo_light"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/button_shape_gold"
            android:id="@+id/unlocked_btn"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Remaining"
            android:fontFamily="@font/heebo_light"
            android:textSize="14sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="8dp"
            android:textColor="@color/colorAccentLighter"
            android:background="@drawable/button_shape_dark"
            android:id="@+id/remaining_btn"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.45"
        android:layout_margin="4dp"
        android:id="@+id/recyclerView"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.05"
        android:text="Reset Your Progress"
        android:fontFamily="@font/heebo_light"
        android:textSize="14sp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="64dp"
        android:textColor="@color/colorAccentLighter"
        android:background="@drawable/button_shape_dark"
        android:id="@+id/reset_btn"/>

</LinearLayout>